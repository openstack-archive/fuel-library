[DEFAULT]
bind_ip = <%= @proxy_local_net_ip %>
bind_port = <%= @port %>
workers = <%= @workers %>
log_facility = LOG_SYSLOG
<% if @debug then -%>
log_level = DEBUG
<% elsif @verbose then -%>
log_level = INFO
<% else -%>
log_level = WARNING
<% end -%>
log_name = swift-proxy-server
user = swift

[pipeline:main]
pipeline = <%= @pipeline.to_a.join(' ') %>

[app:proxy-server]
use = egg:swift#proxy
allow_account_management = <%= @allow_account_management %>
account_autocreate = <%= @account_autocreate %>

