[DEFAULT]
hypervisor_inspector=<%= scope.lookupvar('vmware::ceilometer::hypervisor_inspector') %>
default_log_levels=<%= scope.lookupvar('vmware::ceilometer::default_log_levels') %>
log_file=ceilometer-agent-compute-vmware-<%= @index %>.log
host=<%= @node_fqdn %>
<% if @nova_default_availability_zone and !@nova_default_availability_zone.empty? -%>
default_availability_zone=<%= @nova_default_availability_zone %>
<% end -%>


[vmware]
host_ip=<%= scope.lookupvar('vmware::ceilometer::vcenter_host_ip') %>
host_username=<%= scope.lookupvar('vmware::ceilometer::vcenter_user') %>
host_password=<%= scope.lookupvar('vmware::ceilometer::vcenter_password') %>

api_retry_count=<%= scope.lookupvar('vmware::ceilometer::api_retry_count') %>
task_poll_interval=<%= scope.lookupvar('vmware::ceilometer::task_poll_interval') %>
<% if scope.lookupvar('vmware::ceilometer::wsdl_location') -%>
wsdl_location=<%= scope.lookupvar('vmware::ceilometer::wsdl_location') %>
<% end -%>
