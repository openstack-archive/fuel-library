#!/bin/sh
<%- if @ipaddr_aliases -%>
<%- @ipaddr_aliases.each do |addr| -%>
ip addr add <%= addr %> dev <%= @interface %>
<%- end -%>
<%- end -%>
<%- if @ethtool_lines -%>
<%- @ethtool_lines.each do |key,line| -%>
ethtool  <%= key %>  <%= @interface %>  <%= line %>
<%- end -%>
<%- end -%>
<%- if @route_rules -%>
ip route replace default via <%= @gateway %> dev <%= @interface %> table <%= @interface %>
ip rule add from <%= @effective_ipaddr %>/<%= @effective_netmask %> table <%= @interface %>
<%- end -%>
true
