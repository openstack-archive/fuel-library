DEVICE=<%= interface %>
BOOTPROTO=none
ONBOOT=yes
USERCTL=no
MASTER=<%= @bond_master %>
SLAVE=yes
<% if @macaddr -%>
MACADDR=<%= @macaddr.upcase %>
<% end -%>
<% if @mtu -%>
MTU=<%= @mtu %>
<% end -%>
<%- if @ethtool_lines -%>
<%- @ethtool_lines.each do |key,line| -%>
post-up  ethtool  <%= key %>  <%= interface %>  <%= line %> || true
<%- end -%>
<%- end -%>