auto <%= interface %>
iface <%= interface %> inet manual
bond-master <%= @bond_master %>
<% if @macaddr -%>
hwaddress ether <%= @macaddr.downcase %>
<% end -%>
<% if @mtu -%>
mtu <%= @mtu %>
<% end -%>
<%- if @ethtool_lines -%>
<%- @ethtool_lines.each do |key,line| -%>
post-up  ethtool  <%= key %>  <%= interface %>  <%= line %> || true
<%- end -%>
<%- end -%>