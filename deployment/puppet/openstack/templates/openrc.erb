export NOVA_ENDPOINT_TYPE='<%= @nova_endpoint_type %>'
export NEUTRON_ENDPOINT_TYPE='<%= @neutron_endpoint_type %>'
export OS_ENDPOINT_TYPE='<%= @os_endpoint_type %>'
export MURANO_REPO_URL='<%= @murano_repo_url %>'
