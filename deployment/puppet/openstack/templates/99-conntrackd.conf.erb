/var/log/conntrackd-stats.log {
    daily
    rotate 1
    missingok
    copytruncate

    postrotate
        invoke-rc.d conntrackd restart > /dev/null
    endscript
}

/var/log/conntrackd.log {
    daily
    rotate 7
    missingok
    copytruncate

    postrotate
        invoke-rc.d conntrackd restart > /dev/null
    endscript
}

