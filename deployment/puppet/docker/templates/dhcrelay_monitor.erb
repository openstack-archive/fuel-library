#!/bin/bash
if ! grep -q docker0 /proc/net/dev; then
  sleep 10
fi

dockerctl post_start_hooks cobbler

( ps -p "`cat /var/run/dhcp-helper.pid 2>/dev/null`" &>/dev/null || /etc/init.d/dhcp-helper start )
if [ $? -eq 0 ]; then
  pid=$(cat /var/run/dhcp-helper.pid)
  while test -d "/proc/$pid/fd"; do
    sleep 30
  done
fi

