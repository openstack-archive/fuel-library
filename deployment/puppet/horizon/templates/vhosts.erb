  RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R]
</VirtualHost>

<VirtualHost *:<%= @https_port %>>
  RedirectMatch permanent ^/$ <%= @root_url %>/
