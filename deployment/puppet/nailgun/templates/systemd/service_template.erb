[Service]
Restart=on-failure
RestartSec=10s
StartLimitBurst=10
TimeoutStartSec=10s
TimeoutStopSec=5s

StandardInput=null
StandardOutput=syslog
StandardError=syslog+console
SyslogIdentifier=<%= @title %>

ExecStartPre=/usr/bin/mkdir -p /var/log/<%= @title %>
ExecStart=
<% if @real_exec[@title] -%>
ExecStart=/bin/bash -c "<%= @real_exec[@title] %> 2>&1 >> /var/log/<%= @title %>/<%= @title %>.log"
<% else -%>
ExecStart=/bin/bash -c "/usr/bin/<%= @title %> 2>&1 >> /var/log/<%= @title %>/<%= @title %>.log"
<% end -%>
