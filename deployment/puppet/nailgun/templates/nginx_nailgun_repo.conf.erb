server {
    listen   8080;

    server_name localhost;

    access_log /var/log/nginx/access_repo.log;
    error_log /var/log/nginx/error_repo.log debug;

    charset utf-8;
    client_max_body_size 2M;

    location / {
        autoindex on;
        root <%= @repo_root %>;
    }

    location /mirror/archive.ubuntu.com/ubuntu/ {
        proxy_pass <%= @ubuntu_repo %>/;
    }
    location /mirror/mirror.fuel-infra.org/mos-repos/ {
        proxy_pass <%= @mos_repo %>/;
    }

    location ~ /\.ht {
        deny  all;
    }

}
