service rsync
{
    disable         = no
    socket_type     = stream
    wait            = no
    user            = root
    server          = /usr/bin/rsync
    server_args     = --daemon --log-file=/var/log/rsync.log
    cps = 512 10
    flags = IPv4
    per_source = UNLIMITED
    log_on_failure  += USERID
}
