  ProxyRequests on
  ProxyVia On
  AllowCONNECT 443 563 5000 6385 8000 8003 8004 8042 8080 8082 8386 8773 8774 8776 8777 9292 9696
  HostnameLookups off
  LimitRequestFieldSize <%= @max_header_size %>
  SetEnv force-proxy-request-1.0 1
  SetEnv proxy-nokeepalive 1
  RequestHeader unset Expect early
  RequestReadTimeout header=0,MinRate=500 body=0,MinRate=500
  <Proxy *>
    Order Deny,Allow
    <% if @master_ip.kind_of?(Array) -%>
    Allow from <%= @master_ip.join(",") %>
    <% else -%>
    Allow from <%= @master_ip %>
    <% end -%>
    Deny from all
  </Proxy>
