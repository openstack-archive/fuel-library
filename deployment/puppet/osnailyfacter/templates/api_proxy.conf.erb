  ProxyRequests on
  ProxyVia On
  AllowCONNECT 443 563
  HostnameLookups off
  LimitRequestFieldSize <%= @max_header_size %>
  <Proxy *>
    Order Deny,Allow
    <% if @master_ip.kind_of?(Array) -%>
    Allow from <%= @master_ip.join(",") %>
    <% else -%>
    Allow from <%= @master_ip %>
    <% end -%>
    Deny from all
  </Proxy>
