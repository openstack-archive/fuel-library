# managed by puppet

"/var/log/atop/atop*"
{
# This file is used for atop binary files rotation
# Will keep binary files for last <%= @rotate %> days instead of 30 days provided by atop
# Do not modify its settings if not sure
  daily
  rotate 1
  nocompress
  nocreate
  missingok
  notifempty
  dateext
  sharedscripts
  lastaction
  <% if @osfamily == 'RedHat' -%>
    /bin/find /var/log/atop/ -type f -mtime +<%= @rotate %> -delete
  <% elsif @osfamily == 'Debian' -%>
    /usr/bin/find /var/log/atop/ -type f -mtime +<%= @rotate %> -delete
  <% else -%>
    /bin/sh -c "find /var/log/atop/ -type f -mtime +<%= @rotate %> -delete"
  <% end -%>
  endscript
  postrotate
  <% if @osfamily == 'RedHat' -%>
    /sbin/service atop restart 2>&1 >/dev/null
  <% elsif @osfamily == 'Debian' -%>
    /usr/sbin/service atop restart 2>&1 >/dev/null
  <% else -%>
    /bin/sh -c "service atop restart 2>&1 >/dev/null"
  <% end -%>
  endscript
}
